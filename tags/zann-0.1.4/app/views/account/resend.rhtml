<% form_tag do -%>
<fieldset>
	<legend>Account Info</legend>
	<div class="required">
		<label for="login">Username</label>
		<%= text_field_tag 'login', "", :class => "inputText" %>
	</div>
</fieldset>
<fieldset>
	<div class="submit">
		<div>
			<%= submit_tag 'Resend activation email', :class => "inputSubmit"%>
		</div>
	</div>
</fieldset>
<% end -%>