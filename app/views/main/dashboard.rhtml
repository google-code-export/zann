<h1>Top Zanned Photos in Albums</h1>
<%= image_tag("loading.gif", :id => "top-photos-in-album-loading-icon", :style=>"display: none; border: 0;" ) %>
<div id="album-winner-photos">
	
</div>
<script type="text/javascript">
Event.observe(window, 'load', function() {
  <%= remote_function(:update => 'album-winner-photos', 
                                   :url => {
                                                :controller => :photos,
                                                :action => :winner_photos
                                        },
                                   :loading => "Element.show('top-photos-in-album-loading-icon');",
                                   :complete => "Element.hide('top-photos-in-album-loading-icon');"
								   )
	%>
});
</script>

<div style="clear:both;margin-top:20px;"/>
<%= javascript_include_tag "swfobject" %>
<h1>Photo Growth</h1>
<div id="photo-growth" style="padding-left:10px;">
		<strong>You need to upgrade your Flash Player</strong>
		Please install a flash player in your browser or turn javascript on.
</div>
<script type="text/javascript">
		// <![CDATA[		
		var so = new SWFObject("/charts.swf", "photo-growth-flash", "800", "400", "7", "#666666");
		so.addVariable("library_path", "/charts_library");
		so.addVariable("xml_source", "<%= url_for :controller => 'photos', :action=>'photo_growth', :only_path=>true %>");
		so.write("photo-growth");		
		// ]]>
</script>
<div style="clear:both;margin-top:20px;"/>
<h1>Interesting Figures</h1>
<%= image_tag("loading.gif", :id => "interesting-figures-loading-icon", :style=>"display: none; border: 0;" ) %>
<div id="interesting-figures">
	
</div>
